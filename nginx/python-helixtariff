server {
    listen       1053;
    server_name  _;

    access_log  /var/log/nginx/python-helixtariff.access.log;
    error_log  /var/log/nginx/python-helixtariff.error.log;

    keepalive_timeout       70;
    ssl                     on;

    ssl_certificate         /etc/nginx/sites-available/python-helixtariff-ssl/webdrive.crt;
    ssl_certificate_key     /etc/nginx/sites-available/python-helixtariff-ssl/webdrive.key;
    ssl_session_cache       shared:SSL:10m;
    ssl_session_timeout     10m;

    location / {
        proxy_pass          http://localhost:9999;
        proxy_redirect      off;
    }
}
