server {
    listen       1053;
    server_name  __HOSTNAME__;

    access_log  /var/log/nginx/helixtariff.access.log;
    error_log  /var/log/nginx/helixtariff.error.log;

    keepalive_timeout       70;
    ssl                     on;

    ssl_certificate         /etc/nginx/sites-available/helixtariff-ssl/webdrive.crt;
    ssl_certificate_key     /etc/nginx/sites-available/helixtariff-ssl/webdrive.key;
    ssl_session_cache       shared:SSL:10m;
    ssl_session_timeout     10m;

    location / {
        proxy_pass          http://localhost:9999;
        proxy_redirect      off;
    }
}
